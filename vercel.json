{
    "version": 2,
    "builds": [
        {
            "src": "autovolt/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.12"
            }
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "autovolt/wsgi.py"
        }
    ],
    "env": {
        "DEBUG": "False"
    }
}